<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#978686"
    tools:context="com.example.sajib.myuserlogin.AddLocation">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <EditText
        android:id="@+id/edittexone"
        android:hint="Name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"
        android:textColorHint="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/editphonnumber"
        android:hint="Phon Number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"
        android:textColorHint="#000000"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/editaddress"
        android:hint="Address"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColorHint="#000000"
        android:inputType="text"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/edittexttwo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="GeoLat"
        android:textSize="14sp"
        android:textColorHint="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColorHint="#000000"

        android:id="@+id/edittextthree"
        android:hint="GeoLong"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
            <EditText
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#000000"
                android:id="@+id/editparkingslot"
                android:hint="slot"
                android:inputType="number"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    <Button
        android:background="#e1d782"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Save"
        android:onClick="savebutton"
        android:textSize="14sp"
        android:textColorHint="#000000"
        android:id="@+id/buttonid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
